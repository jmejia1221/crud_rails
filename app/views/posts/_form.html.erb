<%= form_for @posts do |f| %>
    <% if @posts.errors.any? %>
        <div id="errors_explanation">
            <h2><%= pluralize(@posts.errors.count, "error") %> prohibited post from being saved</h2>

            <ul>
                <% @posts.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="form-group">
        <%= f.label :title, "Titulo" %>
        <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :author, "Autor" %>
        <%= f.text_field :author, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :description, "Descripcion" %>
        <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="pull-right">
        <%= link_to "Go back", root_path, class: "btn btn-default" %>
        <%= f.submit "#{action}", class: "btn btn-success" %>
    </div>
    <!-- <a href="/">Go back</a> -->
<% end %>
