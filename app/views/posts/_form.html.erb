<%= form_for @posts do |f| %>
    <% if @posts.errors.any? %>
        <div id="errors_explanation">
            <h2><%= pluralize(@posts.errors.count, "error") %> prohibited post from being saved</h2>

            <ul>
                <% @posts.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <table>
        <tbody>
            <tr>
                <td>
                    <%= f.label :title, "Titulo" %>
                </td>
                <td>
                    <%= f.text_field :title %>
                </td>
            </tr>
            <tr>
                <td>
                    <%= f.label :author, "Autor" %>
                </td>
                <td>
                    <%= f.text_field :author %>
                </td>
            </tr>
            <tr>
                <td>
                    <%= f.label :description, "Descripcion" %>
                </td>
                <td>
                    <%= f.text_area :description %>
                </td>
            </tr>
            <tr colspan="2">
                <td>
                    <%= f.submit "#{action}" %>
                </td>
            </tr>
        </tbody>
    </table>
    <!-- <a href="/">Go back</a> -->
    <%= link_to "Go back", root_path %>
<% end %>
